<body>
	{snippet flashes}
		<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
	{/snippet}

	<div class="navbar-fixed">
		<nav>
			<div class="nav-wrapper">
				<a n:href=":Admin:Dashboard:" class="brand-logo">SRP</a>
				<ul class="right hide-on-med-and-down">
					<li><a n:href=":Homepage:logOut">OdhlÃ¡sit ({$userIdentity->getUsername()})</a></li>
				</ul>
			</div>
		</nav>
	</div>

	<ul class="s_sidenav">
		<li><a href="#"><i class="material-icons">menu</i></a></li>
		<li><a n:href=":Admin:Dashboard:"><i class="material-icons">dashboard</i></a></li>
		<li><a href="#"><i class="material-icons">people</i></a></li>
		<li><a href="#"><i class="material-icons">new_releases</i></a></li>
		<li><a n:href=":Admin:Brands:Brand:"><i class="material-icons">local_offer</i></a></li>
	</ul>

	<div class="s_main">
		<div class="s_title">
			<a href="{block backLink}{plink :Admin:Dashboard:}{/block}" class="back-link"><i class="material-icons tiny">arrow_back</i></a>
			<h1 n:block="title">{include h1}</h1>
		</div>

		<div class="s_content--wrapper">
			{include content}
		</div>
	</div>

	{block scripts}
		<script src="{$basePath}/js/jquery-3.6.0.min.js"></script>
		<script src="{$basePath}/js/netteForms.min.js"></script>
		<script src="{$basePath}/js/nette.ajax.js"></script>
		<script src="{$basePath}/js/confirm.ajax.js"></script>
		<script src="{$basePath}/js/materialize.min.js"></script>
		<script src="{$basePath}/js/admin.js"></script>
	{/block}
